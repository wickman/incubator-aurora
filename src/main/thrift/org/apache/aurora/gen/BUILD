import os

TEST_DATA = globs('*test.thrift')

python_thrift_library(
  name = 'py-thrift',
  sources = [
    'api.thrift',
    'internal_rpc.thrift',
  ],
)

python_thrift_library(
  name = 'py-thrift-test',
  sources = TEST_DATA,
)

python_thrift_library(
  name = 'py-thrift-storage',
  sources = ['storage.thrift'],
)

python_library(
  name = 'py-thrift-packaged',
  dependencies = [
    pants(':py-thrift'),
    pants(':py-thrift-test'),
    pants(':py-thrift-storage'),
  ],
  provides = setup_py(
    name = 'apache.gen.aurora',
    version = open(os.path.join(get_buildroot(), '.auroraversion')).read().strip().upper(),
    description = 'Autogenerated Aurora thrift schemas.',
  )
)
